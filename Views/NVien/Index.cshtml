@{
    ViewBag.Title = "Index";
}
<h3>QUẢN LÝ NHÂN VIÊN</h3>
<table class="table" border="1" style="font-size:14px">
    <tr>
        <th>Mã NV</th>
        <th>Họ tên</th>
        <th>Phòng</th>
        <th>Lương</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Manv</td>
            <td>@item.Hoten</td>
            <td>@item.Maphong</td>
            <td>@item.Luong</td>
            <td>
                @Html.ActionLink("Sửa", "Sua", new { id = item.Manv.Trim() })|
                @Html.ActionLink("Chi tiết", "ChiTiet", new { id = item.Manv.Trim() })|
                @Html.ActionLink("Xóa", "Xoa", new { id = item.Manv.Trim() })
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Thêm mới", "Them", "NVien")